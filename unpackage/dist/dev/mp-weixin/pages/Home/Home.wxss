	height: 150px;
	border-radius: 5px;
}
.desc {
	margin-top: 5px;
	font-size: 16px;

	/*  */
	overflow: hidden;
	word-break: break-all;
	/* break-all(允许在单词内换行。) */
	text-overflow: ellipsis;
	/* 超出部分省略号 */
	display: -webkit-box;
	/** 对象作为伸缩盒子模型显示 **/
	/*! autoprefixer: off */
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
}
